                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Please check for any mistakes</description>
        <entryCriteria>
            <criteriaItems>
                <field>Product_Complaints__kav.PublishStatus</field>
