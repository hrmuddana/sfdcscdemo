    <emailTemplate>C_Sports/Approval_for_Knowledge_Article</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Product_Complaints__kav.ArticleType</field>
